<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cmov.bombermanandroid.app.MultiplayerActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_multiplayer_new_game"
        android:id="@+id/button_multiplayer_new_game"
        android:onClick="createNewMultiplayerGame"
        android:layout_alignParentTop="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_multiplayer_refresh_list"
        android:id="@+id/button_multiplayer_refresh_list"
        android:onClick="refreshMultiplayerGamesList"
        android:layout_alignBottom="@+id/button_multiplayer_new_game"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_multiplayer_games_list"
        android:layout_below="@+id/button_multiplayer_new_game"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
